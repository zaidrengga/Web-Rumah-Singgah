generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @updatedAt
  updatedAt DateTime @updatedAt
  Order     Order[]
}

model Product {
  id          String      @id @default(uuid())
  name        String      @unique
  price       Int
  image       String
  description String
  category    Category
  createdAt   DateTime    @updatedAt
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]
}

enum Category {
  coffee
  non_coffee
}

model Order {
  id           String      @id @default(uuid())
  customerName String
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
  items        OrderItem[]
  total        Int
  timestamp    DateTime    @default(now())
  status       OrderStatus @default(PENDING)
}

model OrderItem {
  id        String  @id @default(uuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  qty       Int
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELED
}
